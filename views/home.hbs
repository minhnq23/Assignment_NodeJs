  <body>




    <div class="container-fluid">
  <h3>Danh sách quản lý người dùng</h3>
             
  <table class="table table-condensed">
    <thead>
      <tr>
      <th scope="col">Id</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">Avatar</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
        <td>{{this.id}}</td>
        <td>{{this.email}}</td>
        <td>{{this.password}}</td>
        <td><img style="width: 70px; height: 70px;" src="{{this.avatar.path}}" alt="Avatar" class="img-thumbnail"></td>
      </tr>
    {{/each}}
    </tbody>
  </table>
